<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg_main"
    android:id="@+id/tab_breakfast">

    <EditText
        android:id="@+id/tabBrAddDescription"
        android:background="@color/background_color"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="4dp"
        android:gravity="start"
        android:textAlignment="textStart"
        android:hint="@string/meal_description"/>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabBrAddDescription"
        android:text="Gem"
        />

    <EditText
        android:id="@+id/tabBrAddMeat1"
        android:background="@color/background_color"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:layout_below="@id/btn_add"
        android:hint="@string/meal_category"/>

    <TextView
        android:id="@+id/meat_1"
        android:background="@color/background_color"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:layout_below="@id/btn_add"
        android:text="KÃ¸d 1:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>