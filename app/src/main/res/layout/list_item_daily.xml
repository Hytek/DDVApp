<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/view_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:orientation="vertical"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bkg_card"
                android:gravity="center"
                android:text="Ugedag"
                android:textColor="@android:color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtBreakfast"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/title"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bordercards"
                android:gravity="start"
                android:paddingLeft="2dp"
                android:text="Breakfast"
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btnBreakfast"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/title"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtDinner"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/txtBreakfast"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bordercards"
                android:gravity="start"
                android:paddingLeft="2dp"
                android:text="Dinner"
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btnDinner"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_below="@id/txtBreakfast"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txtLunch"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@id/txtBreakfast"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/txtBreakfast"
                android:background="@drawable/bordercards"
                android:gravity="start"
                android:paddingLeft="2dp"
                android:text="Lunch"
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btnLunch"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@id/btnBreakfast"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/txtBreakfast" />

            <TextView
                android:id="@+id/txtSnacks"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@id/txtDinner"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/txtDinner"
                android:background="@drawable/bordercards"
                android:gravity="start"
                android:paddingLeft="2dp"
                android:text="Snacks"
                android:textAlignment="textStart"
                android:textSize="12dp" />

            <Button
                android:id="@+id/btnSnacks"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignBaseline="@id/btnDinner"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/btnDinner" />

            <TableLayout
                android:id="@+id/dailyOverviewHeaderTable"
                android:layout_width="164dp"
                android:layout_height="124dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bordercards"
                android:layout_toRightOf="@id/txtLunch"
                android:layout_below="@id/title"
                android:stretchColumns="0,1">

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="0dp"
                    android:id="@+id/table0">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Grønt"
                        android:textSize="12dp"
                        android:id="@+id/txtVeggies"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="10dp"
                        android:text="0/2"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"

                        android:id="@+id/txtVeggiesCount"
                        android:layout_column="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="16dp"
                    android:id="@+id/table1"                   >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Frugt"
                        android:textSize="12dp"
                        android:id="@+id/txtFruit"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="10dp"
                        android:text="0/3"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:id="@+id/txtFruitCount"
                        android:layout_column="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="16dp"
                    android:id="@+id/table2"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Tilbehør 1 og 2"
                        android:textSize="12dp"
                        android:id="@+id/txtMisc12"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="10dp"
                        android:text="0/1"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:id="@+id/txtMisc12Count"
                        android:layout_column="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:id="@+id/table3"
                    >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Tilbehør 3"
                        android:textSize="12dp"
                        android:id="@+id/txtMisc3"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="10dp"
                        android:text="0/2"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:id="@+id/txtMisc3Count"
                        android:layout_column="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:id="@+id/table4"                   >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Mælk"
                        android:textSize="12dp"
                        android:id="@+id/txtMilk"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="10dp"
                        android:text="0/4"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:id="@+id/txtMilkCount"
                        android:layout_column="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:id="@+id/table5"                   >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Ekstra"
                        android:textSize="12dp"
                        android:id="@+id/txtExtra"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="2dp"
                        android:text="0/(3)"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:id="@+id/txtExtraCount"
                        android:layout_column="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:id="@+id/table6"                   >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Fedt"
                        android:textSize="12dp"
                        android:id="@+id/txtFat"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="10dp"
                        android:text="0/3"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:id="@+id/txtFatCount"
                        android:layout_column="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="160dp"
                    android:layout_height="15dp"
                    android:id="@+id/table7"                   >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:paddingLeft="2dp"
                        android:text="Vand"
                        android:textSize="12dp"
                        android:id="@+id/txtWater"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="4dp"
                        android:paddingRight="10dp"
                        android:text="0/4"
                        android:textSize="12dp"
                        android:textAlignment="textEnd"
                        android:layout_gravity="end"
                        android:id="@+id/txtWaterCount"
                        android:layout_column="1"
                        />

                </TableRow>

            </TableLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>