<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/bkg_card"
            android:gravity="center"
            android:text="contact det"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txtBreakfast"
            android:background="@drawable/bordercards"
            android:paddingLeft="2dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_below="@id/title"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:textAlignment="textStart"

            android:text="Name"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtDinner"
            android:background="@drawable/bordercards"
            android:paddingLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_below="@id/txtBreakfast"
            android:layout_marginLeft="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:text="Surname"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtLunch"
            android:background="@drawable/bordercards"
            android:paddingLeft="2dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@id/txtBreakfast"
            android:layout_toRightOf="@id/txtBreakfast"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:text="Email"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtSnacks"
            android:background="@drawable/bordercards"
            android:paddingLeft="2dp"
            android:layout_marginTop="4dp"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignBaseline="@id/txtDinner"
            android:layout_toRightOf="@id/txtDinner"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:text="Address"
            android:textSize="12dp" />



    </RelativeLayout>

</android.support.v7.widget.CardView>